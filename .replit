# Rádio IA News - Configuração Replit
# Habilitar áudio para reprodução da rádio
audio = true

entrypoint = "app.py"
modules = ["python-3.10:v18-20230807-322e88b"]

# Instala dependências ao abrir o Repl (primeira vez ou após mudar requirements.txt)
onBoot = "pip install -r requirements.txt"

[nix]
channel = "stable-23_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "ffmpeg-full", "fontconfig", "freetype", "libjpeg", "libpng", "pkg-config", "portmidi"]

[unitTest]
language = "python3"

[packager]
language = "python3"

[packager.features]
guessImports = true
packageSearch = true
enabledForHosting = true

[deployment]
run = ["python3", "app.py"]
deploymentTarget = "cloudrun"

[run]
args = ["python3", "app.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rádio IA News"

[[workflows.workflow]]
name = "Rádio IA News"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 app.py"

[workflows.workflow.metadata]
outputType = "console"

[agent]
expertMode = true
